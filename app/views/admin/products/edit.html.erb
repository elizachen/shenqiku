<body id="labtop">
<div class="container-fluid">
  <%= render "common/navbar" %>
      <%= render "common/flashes" %>
<h2> Edit Product </h2>

<%= simple_form_for [:admin, @product] do |f| %>

  <div class="group">
    <%= f.input :title %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :quantity %>
  </div>

  <div class="group">
    <%= f.input :price %>
  </div>

  <div class="group">
    <%= f.input :categories %>
  </div>

  <% if @product.image.present? %>
   <span>目前商品图</span> <br>
   <%= image_tag(@product.image.thumb.url) %>
 <% end %>

  <div class="group">
   <%= f.input :image, as: :file %>
 </div>
  <div class="group">
    <strong>Is_Fund: </strong><%=f.select :is_fund, [true,false]%>
  </div>

 <% if @product.image_url.present? %>
  <span>目前商品链接</span> <br>
  <%= f.input :image_url %>
<% end %>


  <%= f.submit "Submit", data: { disable_with: "Submitting..." } %>

<% end %>
</div>
</body>
