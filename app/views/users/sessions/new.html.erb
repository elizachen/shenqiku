<body id="labtop">
<div class="container-fluid">
	<%= render "common/navbar" %>
			<%= render "common/flashes" %>
<div class="col-md-4 col-md-offset-4 sign-up-page">

<h2 class="text-center" style="color:#2563ab;">Welcome to FANGMAIKU</h2>
<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs" style="color:#2563ab;">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
    <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in",class:"form-control btn btn-register btncolor"%>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>
<style>
.btncolor{
	color:white;
	background-color:#2563ab;
}

</style>
</body>
